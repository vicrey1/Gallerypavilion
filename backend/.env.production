# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with actual production values

# Database Configuration
MONGODB_URI=mongodb://your-production-mongodb-uri/gallery-pavilion
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/gallery-pavilion

# JWT Configuration - MUST CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration - Set to your actual domain
CLIENT_URL=https://yourdomain.com

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
MAX_FILES_PER_GALLERY=50

# Image Processing
WATERMARK_TEXT=Gallery Pavilion
THUMBNAIL_SIZE=300
PREVIEW_SIZE=800
WATERMARK_OPACITY=0.3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration (Recommended for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Email Configuration - Update with your email service
EMAIL_SERVER_USER=noreply@yourdomain.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_SERVER_HOST=your-email-host
EMAIL_SERVER_PORT=465
EMAIL_SERVER_SECURE=true
EMAIL_FROM=noreply@yourdomain.com
EMAIL_CONTACT_TO=support@yourdomain.com

# Admin Configuration - CHANGE THESE
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password

# Security Headers
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log