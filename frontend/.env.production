# Production Environment Configuration
# IMPORTANT: Replace placeholder values with actual production values

# API Configuration - Update with your production domain
REACT_APP_API_URL=/api
REACT_APP_BASE_URL=https://yourdomain.com

# Application Configuration
REACT_APP_APP_NAME=Gallery Pavilion
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Features
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_SOCIAL_LOGIN=false
REACT_APP_ENABLE_ANALYTICS=true

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
REACT_APP_MAX_FILES_PER_GALLERY=50

# UI Configuration
REACT_APP_THEME=light
REACT_APP_BRAND_COLOR=#3B82F6
REACT_APP_SECONDARY_COLOR=#10B981

# SEO Configuration
REACT_APP_SITE_TITLE=Gallery Pavilion - Professional Photography Platform
REACT_APP_SITE_DESCRIPTION=Professional photography gallery platform for photographers to showcase and share their work
REACT_APP_SITE_KEYWORDS=photography,gallery,portfolio,professional,photos

# Social Media
REACT_APP_FACEBOOK_URL=https://facebook.com/gallerypavilion
REACT_APP_INSTAGRAM_URL=https://instagram.com/gallerypavilion
REACT_APP_TWITTER_URL=https://twitter.com/gallerypavilion

# Analytics (if enabled)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# REACT_APP_FACEBOOK_PIXEL_ID=XXXXXXXXX

# Performance
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true

# Security
REACT_APP_SECURE_COOKIES=true
REACT_APP_HTTPS_ONLY=true

# Contact Information
REACT_APP_CONTACT_EMAIL=support@yourdomain.com
REACT_APP_CONTACT_PHONE=+1-XXX-XXX-XXXX
REACT_APP_BUSINESS_ADDRESS=Your Business Address

# Legal
REACT_APP_PRIVACY_POLICY_URL=/privacy
REACT_APP_TERMS_OF_SERVICE_URL=/terms

# CDN Configuration (if using)
# REACT_APP_CDN_URL=https://cdn.yourdomain.com

# Error Tracking (if using services like Sentry)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false