# API Configuration
REACT_APP_API_URL=/api
REACT_APP_BASE_URL=http://localhost:5000

# Application Configuration
REACT_APP_APP_NAME=Gallery Pavilion
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Features
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_SOCIAL_LOGIN=false
REACT_APP_ENABLE_ANALYTICS=false

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
REACT_APP_MAX_FILES_PER_GALLERY=50

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_MASONRY_BREAKPOINTS={"default":4,"1100":3,"700":2,"500":1}

# Gallery Configuration
REACT_APP_GALLERY_GRID_GAP=16
REACT_APP_LIGHTBOX_ENABLED=true
REACT_APP_INFINITE_SCROLL=true
REACT_APP_LAZY_LOADING=true

# Share Links
REACT_APP_SHARE_LINK_EXPIRY_DAYS=30
REACT_APP_ENABLE_PASSWORD_PROTECTION=true
REACT_APP_ENABLE_DOWNLOAD=true

# Analytics (if enabled)
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_MIXPANEL_TOKEN=

# Social Media (for sharing)
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_TWITTER_HANDLE=@gallerypavilion

# SEO
REACT_APP_META_TITLE=Gallery Pavilion - Professional Photography Platform
REACT_APP_META_DESCRIPTION=Discover and share stunning photography galleries from professional photographers worldwide.
REACT_APP_META_KEYWORDS=photography,gallery,portfolio,professional,photos

# Contact
REACT_APP_CONTACT_EMAIL=contact@gallerypavilion.com
REACT_APP_SUPPORT_EMAIL=support@gallerypavilion.com

# External Services
# REACT_APP_UNSPLASH_ACCESS_KEY=your-unsplash-access-key
# REACT_APP_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Development
REACT_APP_DEBUG=true
REACT_APP_MOCK_API=false

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_IMAGES=true
REACT_APP_PRELOAD_IMAGES=3

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_SECURE_COOKIES=false