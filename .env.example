# Server Configuration (Vercel handles PORT automatically)
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://gallerypavilion:<Cronaldo-7>@gallery-pavilion.grnhga3.mongodb.net/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-for-production
JWT_EXPIRES_IN=7d

# Frontend/Backend URLs (Update with your Vercel domain)
FRONTEND_URL=https://your-vercel-app.vercel.app
BACKEND_URL=https://your-vercel-app.vercel.app/api

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=gallery-pavilion-storage

# Cloudflare R2 (Alternative to S3)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=gallery-pavilion-r2

# External APIs (Optional)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
PEXELS_API_KEY=your-pexels-api-key
PIXABAY_API_KEY=your-pixabay-api-key

# Email Configuration (for inquiries and invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@gallerypavilion.com

# Admin Configuration
ADMIN_EMAIL=admin@gallerypavilion.com
ADMIN_PASSWORD=secure-admin-password-change-this

# Security (Update CORS_ORIGIN with your Vercel domain)
CORS_ORIGIN=https://your-vercel-app.vercel.app
COOKIE_SECRET=your-secure-cookie-secret-key-for-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=20

# Watermark Configuration
WATERMARK_TEXT=Gallery Pavilion
WATERMARK_OPACITY=0.3