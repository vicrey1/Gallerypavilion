{
  "version": 2,
  "buildCommand": "npm install --prefix frontend && cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install --prefix frontend",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}