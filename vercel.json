{
  "version": 2,
  "buildCommand": "cd frontend && CI=false npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "npm ci --prefix frontend",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}